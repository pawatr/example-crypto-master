<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CryptoMaster" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textHeader">
        <item name="android:textColor">@color/text_header_dark</item>
    </style>
    <style name="textPrimary">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    <style name="textSecondary">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>
    <style name="buttonPrimary">
        <item name="android:textColor">@color/button_primary_dark</item>
    </style>
    <style name="textTopCoins">
        <item name="android:textColor">@color/top_coins_dark</item>
    </style>
    <style name="bottomSheetBg" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/bg_bottom_sheet_dark</item>
    </style>
    <style name="searchBg" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/bg_search_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
</resources>